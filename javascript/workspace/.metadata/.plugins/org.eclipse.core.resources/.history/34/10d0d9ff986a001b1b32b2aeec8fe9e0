	pr("%", 5);
	결과 : %%%%%
	
	위의 결과가 나오는 함수를 선언하여 사용한다.
	단, 최소 한 번은 출력되어야 한다.
-->
</body>
<script>
	var msg = "최소 한 번은 출력되야 합니다."
	var result = "";
	var st = prompt("문자 입력");
	var cnt = prompt("횟수 입력");
	
	function pr(st, cnt){
		if(cnt<1){
			//alert(msg);
			return;
		}
		for(let i=1;i<=cnt;i++){
			result += st;
		}
		if(result==undefined){
			result = "최소 한 번은 입력되야 합니다.";
		}
		return result;
	}
	alert(pr(st,cnt));
</script>
</html>